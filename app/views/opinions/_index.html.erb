<ul>
  <% opinions.each do |opinion| %>
    <% if opinion.id.present? %>
      <li>
        <div class="opinion-content" id ="this_opinion_<%= opinion.id %>"></div>
        <span><%= opinion.content %></span>
        <%= link_to edit_experience_opinion_path(experience, opinion), remote: true do %>
          <i class="far fa-edit"></i>
        <% end %>
        <%= link_to experience_opinion_path(opinion.experience_id, opinion.id), method: :delete, remote: true, data: { confirm: "本当に削除しますか?"} do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
