<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <span><%= comment.content %></span>
        <%= link_to edit_movie_comment_path(movie, comment), remote: true do %>
          <i class="far fa-edit"></i>
        <% end %>
        <%= link_to movie_comment_path(comment.movie_id, comment.id), method: :delete, remote: true, data: { confirm: "本当に削除しますか?"} do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
